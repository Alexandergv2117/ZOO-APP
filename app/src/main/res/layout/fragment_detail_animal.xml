<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".UI.DetailAnimal.DetailAnimalFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="219dp"
                android:layout_marginTop="30dp">


                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/corrugado_fondo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/gif_animal"
                    android:layout_width="307dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/gif_animado"
                    android:rotation="17"
                    android:tooltipText="gif"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/SpecifiCornerRounded"
                    tools:src="@tools:sample/avatars" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/audio_animal"
                    android:layout_width="63dp"
                    android:layout_height="60dp"
                    android:backgroundTint="#cbe368"
                    android:contentDescription="@string/audio"
                    android:src="@drawable/musica"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.91"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/gif_animal"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundTint="#000000"
                android:outlineAmbientShadowColor="#050404"
                android:outlineSpotShadowColor="#050404">

                <TextView
                    android:id="@+id/nombre_cientifico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mark"
                    android:textSize="27dp"
                    android:foregroundTint="#000000"
                    android:textColor="@color/black"
                    android:text="@string/nombre_cientifico"
                    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.071"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.222"
                    />

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textSize="15dp"
                    android:fontFamily="@font/arima"
                    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.057"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.638" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_horizontal6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.2" />

                <!-- Origen-->

                <ImageView
                    android:id="@+id/icono_origen"
                    android:layout_width="@dimen/layout_width_icon"
                    android:layout_height="@dimen/layout_width_icon"
                    android:background="@drawable/icon_back"
                    android:elevation="8dp"
                    android:fontFamily="@font/mark"
                    android:textSize="27dp"
                    android:outlineAmbientShadowColor="#070404"
                    android:scaleType="fitXY"
                    android:translationZ="2dp"
                    app:layout_constraintBottom_toBottomOf="@id/nombre"
                    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.056"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline_horizontal6" />

                <TextView
                    android:id="@+id/text_origen"
                    android:layout_width="@dimen/layout_width_image"
                    android:layout_height="@dimen/layout_height_image"
                    android:text="@string/origen_detail"
                    android:fontFamily="@font/arima"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.831"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline_horizontal6" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_horizontal5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.28" />

                <!-- Habitat-->

                <ImageView
                    android:id="@+id/icono_habitat"
                    android:layout_width="@dimen/layout_width_icon"
                    android:layout_height="@dimen/layout_width_icon"
                    android:background="@drawable/icon_back"
                    android:elevation="8dp"
                    android:scaleType="fitXY"
                    android:translationZ="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/icono_origen"
                    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.056"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline_horizontal5" />

                <TextView
                    android:id="@+id/text_habitat"
                    android:layout_width="@dimen/layout_width_image"
                    android:layout_height="@dimen/layout_height_image"
                    android:text="@string/habitat"
                    android:fontFamily="@font/arima"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.82"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline_horizontal5" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_horizontal4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.40" />

                <!-- Riesgo-->

                <ImageView
                    android:id="@+id/icono_riesgo"
                    android:layout_width="@dimen/layout_width_icon"
                    android:layout_height="@dimen/layout_width_icon"
                    android:background="@drawable/icon_back"
                    android:elevation="8dp"
                    android:scaleType="fitXY"
                    android:translationZ="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/icono_habitat"
                    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.056"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline_horizontal4" />

                <TextView
                    android:id="@+id/text_riesgo"
                    android:layout_width="@dimen/layout_width_image"
                    android:layout_height="@dimen/layout_height_image"
                    android:text="@string/riesgo_detai"
                    android:fontFamily="@font/arima"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.82"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline_horizontal4" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_horizontal3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.5" />

                <!-- Tamaño-->

                <ImageView
                    android:id="@+id/icono_tamanio"
                    android:layout_width="@dimen/layout_width_icon"
                    android:layout_height="@dimen/layout_width_icon"
                    android:background="@drawable/icon_back"
                    android:elevation="8dp"
                    android:scaleType="fitXY"
                    android:translationZ="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/icono_riesgo"
                    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.056"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline_horizontal3" />

                <TextView
                    android:id="@+id/text_tamanio"
                    android:layout_width="@dimen/layout_width_image"
                    android:layout_height="@dimen/layout_height_image"
                    android:text="@string/tama_o"
                    android:fontFamily="@font/arima"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.786"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline_horizontal3" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_horizontal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.62" />
                <!-- Reproduccion-->


                <ImageView
                    android:id="@+id/icono_reproduccion"
                    android:layout_width="@dimen/layout_width_icon"
                    android:layout_height="@dimen/layout_width_icon"
                    android:background="@drawable/icon_back"
                    android:elevation="8dp"
                    android:scaleType="fitXY"
                    android:translationZ="2dp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.046"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline_horizontal2"
                    app:layout_constraintVertical_bias="0.714" />

                <TextView
                    android:id="@+id/text_reproduccion"
                    android:layout_width="@dimen/layout_width_image"
                    android:layout_height="@dimen/layout_height_image"
                    android:text="@string/reproducci_n"
                    android:fontFamily="@font/arima"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.831"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline_horizontal2" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_horizontal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.72" />
                <!-- Alimentacion-->

                <ImageView
                    android:id="@+id/icono_alimentacion"
                    android:layout_width="@dimen/layout_width_icon"
                    android:layout_height="@dimen/layout_width_icon"
                    android:background="@drawable/icon_back"
                    android:elevation="8dp"
                    android:scaleType="fitXY"
                    android:translationZ="2dp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.055"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline_horizontal1" />

                <TextView
                    android:id="@+id/text_alimentacion"
                    android:layout_width="@dimen/layout_width_image"
                    android:layout_height="@dimen/layout_height_image"
                    android:text="@string/alimentacion"
                    android:fontFamily="@font/arima"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.831"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline_horizontal1" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.88" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_horizontal0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0" />


                <com.google.android.exoplayer2.ui.StyledPlayerView
                    android:id="@+id/player_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:animation_enabled="true"
                    app:buffered_color="@color/verde_oliva"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:show_buffering="when_playing"
                    app:layout_constraintBottom_toTopOf="@+id/descripcion"
                    app:show_shuffle_button="true" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintBottom_toTopOf="@+id/descripcion"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/player_view" />

                <TextView
                    android:id="@+id/descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="descripcion"
                    android:fontFamily="@font/arimaregular"
                    android:textSize="18dp"
                    android:background="@drawable/bordertext"
                    android:lineSpacingExtra="5dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@id/mapa"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/player_view" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toTopOf="@+id/mapa"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/descripcion" />

                <ImageView
                    android:id="@+id/mapa"
                    android:layout_width="376dp"
                    android:layout_height="227dp"
                    android:layout_marginBottom="44dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/descripcion"
                    app:shapeAppearanceOverlay="@style/SpecifiCornerRounded"
                    tools:src="@tools:sample/backgrounds/scenic" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>